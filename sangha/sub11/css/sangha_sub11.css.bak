
 body,header,ul,li,div,section,header,footer,a,p,img,h1,h2,h3{margin:0px; padding:0px;}
 ul{list-style:none;} 
 a{text-decoration:none; color:030303;} 
   
#event{width:100%; height:1300px; background:#ffffff;
        }
#event>h2{width:1230px; height:130px; margin:160px auto 50px auto;}
#event>ul{width:1230px; height:1000px;margin:0px auto;}
#event>ul>li{float:left; margin:0 0 40px 30px ; width:600px; height:300px; background:rgba(250,236,197,0.5); text-align:center; font-size:10pt; color:#030303; line-height:1.5em; cursor:pointer;}
#event>ul>li:nth-of-type(odd){margin-left:0px;} 
#event>ul>li>img{border-bottom:5px solid #ffffff; box-sizing:border-box;}  


footer{ position:absolute; width:100%; height:100px; top:1400px; left:0px; background:rgba(255,255,255,0.5); z-index:5; text-align:center;}
 footer>ul>li{float:left; margin-left:15px; margin-top:20px;}
 footer>ul>li:first-child{margin-left:0px;}
 footer>ul{display:block;width:165px; height:65px; margin:0px auto;}
 footer>p{color:#472600; font-size:13px;}
 
